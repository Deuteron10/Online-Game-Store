@model IEnumerable<Online_Game_Store.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Customers</h2>

@if (!Model.Any())
{
    <p>We don't have any customers yet.</p>
}

else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Customers</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    @* each customer is iterated and customer name is binded to link with "Details" action in controller "Customer" *@
                    <td>@Html.ActionLink(customer.Name, "Details", "Customer", new { id = customer.ID }, null)</td>
                </tr>
            }

        </tbody>
    </table>
}
